{
  "expo": {
    "name": "TruckSarthi",
    "slug": "trucksarthi-frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/TruckSarthi-Logo.png",
    "scheme": "trucksarthifrontend",
    "userInterfaceStyle": "automatic",
    "jsEngine": "hermes",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
    "bundleIdentifier": "com.sahilgumber7.trucksarthi"   ,   
    "buildNumber": "1.0.0"
    },

    "android": {
"package": "com.sahilgumber7.trucksarthi",
"googleServicesFile": "./google-services.json",

      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/TruckSarthi-Logo.png",
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "output": "static",
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },

    "splash": {
      "image": "./assets/TruckSarthi-Graphic.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "plugins": [
      "expo-router",
  "@react-native-firebase/app",
  "@react-native-firebase/auth",
      [
        "expo-splash-screen",
        {
          "image": "./assets/TruckSarthi-Graphic.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-web-browser"
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "65746392-bd98-48dd-ad7b-50391f8a8497"
      }
    },

    "runtimeVersion": {
      "policy": "appVersion"
    },

    "updates": {
      "url": "https://u.expo.dev/65746392-bd98-48dd-ad7b-50391f8a8497"
    }
  }
}
